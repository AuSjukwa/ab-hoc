{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "ESNext",
        "lib": ["ESNext"],
        "module": "ESNext",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "jsx": "preserve",
        "strict": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "noEmit": true,
        "paths": {
            "core": ["../core"]
        }
    },
    "include": ["src/**/*"]
}
